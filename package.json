{
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest",
		"lint": "eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"protobuf": "protoc --ts_out src/common --proto_path src/common src/common/pb.proto",
		"buildServer:watch": "mkdir -p build ; echo '{}' > build/package.json ; tsc --module commonjs --preserveValueImports false --watch",
		"server": "nodemon -r dotenv/config --trace-warnings --enable-source-maps build/src/server/main.js"
	},
	"dependencies": {
		"@protobuf-ts/runtime": "^2.8.2",
		"bufferutil": "^4.0.7",
