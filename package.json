		"prettier": "^2.8.4",
		"prettier-plugin-organize-imports": "^3.2.2",
		"prettier-plugin-svelte": "^2.9.0",
		"seedrandom": "^3.0.5",
		"svelte": "^3.57.0",
		"svelte-check": "^3.1.4",
		"tslib": "^2.5.0",
		"typescript": "^4.9.5",
		"vite": "^4.2.0",
		"vitest": "^0.29.3"
	},
	"type": "module"
